pipeline {
  agent {
    kubernetes {
      inheritFrom 'kaniko'
    }
  }
  stages {
    stage('Build image') {
      steps {
        container('kaniko') {
          sh '/kaniko/executor --dockerfile `pwd`/Dockerfile --context `pwd` --destination=andrezug/testkaniko:v0.4'
        }
      }
    }
  }
}